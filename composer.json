{
    "name": "splash/prestashop",
    "description": "Splash Module for Prestashop",

    "license": "MIT",

    "minimum-stability": "dev",
    "prefer-stable": true,
    
    "config": {
        "vendor-dir":                   "modules/splashsync/vendor",
        "bin-dir":                      "modules/splashsync/vendor/bin",
        "preferred-install":            "dist"
    },
    
    "autoload": {
        "psr-4": { "Splash\\Local\\": "modules/splashsync/src" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    
    "require": {
        "php":                              "^5.6|^7.0",
        "splash/phpcore":                   "dev-master"
    },
    
    "require-dev": {
        "splash/console":                   "dev-master",
        "phpunit/phpunit":                  "^7.0",
        "composer/composer":                "^1.5",
        "j13k/yaml-lint":                   "^1.1",
        "php-parallel-lint/php-parallel-lint":  "^1.0",
        "phpmd/phpmd":                      "^2.6",
        "phpro/grumphp":                    "^0.17",
        "sclable/xml-lint":                 "^0.3",
        "sebastian/phpcpd":                 ">5.0",
        "seld/jsonlint":                    "^1.7",
        "sensiolabs/security-checker":      "*",
        "squizlabs/php_codesniffer":        "^3.2",
        "friendsofphp/php-cs-fixer":        "^2.10",
        "phpstan/phpstan":                  "^0.12",
        "phpstan/phpstan-phpunit":          "^0.12"        
    },
    
    "autoload-dev": {
        "psr-4": { "Splash\\Tests\\": "modules/splashsync/tests" }
    },
    
    "scripts": {
        "post-install-cmd": [
            "php modules/splashsync/vendor/bin/grumphp git:deinit"            
        ],
        "post-update-cmd": [
            "php modules/splashsync/vendor/bin/grumphp git:deinit"            
        ]
    }    
}
